<?xml version="1.0"?>
<robot name="four_wheel_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="wheel_radius" value="0.05" />
  <xacro:property name="wheel_width" value="0.02" />
  <xacro:property name="base_x_size" value="0.3" />
  <xacro:property name="base_y_size" value="0.2" />
  <xacro:property name="base_z_size" value="0.1" />

  <link name="base_link">
    <visual>
      <geometry>
        <box size="${base_x_size} ${base_y_size} ${base_z_size}" />
      </geometry>
    </visual>
  </link>

  <xacro:macro name="wheel" params="prefix parent_link x_pos y_pos z_pos">
    <link name="${prefix}_wheel_link">
      <visual>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}" />
        </geometry>
        <origin xyz="0 0 0" rpy="1.5707 0 0" /> </visual>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="${parent_link}" />
      <child link="${prefix}_wheel_link" />
      <origin xyz="${x_pos} ${y_pos} ${z_pos}" />
      <axis xyz="0 1 0" /> </joint>
  </xacro:macro>

  <xacro:wheel prefix="front_left" parent_link="base_link" x_pos="0.1" y_pos="0.12" z_pos="-0.05" />
  <xacro:wheel prefix="front_right" parent_link="base_link" x_pos="0.1" y_pos="-0.12" z_pos="-0.05" />
  <xacro:wheel prefix="rear_left" parent_link="base_link" x_pos="-0.1" y_pos="0.12" z_pos="-0.05" />
  <xacro:wheel prefix="rear_right" parent_link="base_link" x_pos="-0.1" y_pos="-0.12" z_pos="-0.05" />

  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.04" />
      </geometry>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link" />
    <child link="lidar_link" />
    <origin xyz="0 0 0.1" rpy="0 0 0" />
  </joint>

</robot>